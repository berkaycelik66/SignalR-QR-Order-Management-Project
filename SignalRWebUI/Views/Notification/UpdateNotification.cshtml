@model UpdateNotificationDto

@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<input type="hidden" asp-for="NotificationID"/>
						<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Güncelleme İşlemi</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="notificationType">Bildirim Türü</label>
								@Html.DropDownListFor(x => x.Type, (List<SelectListItem>)ViewBag.NotificationType, new { @class = "form-control" })
							</div>

							<div class="form-group">
								<label for="notificationIcon">Bildirim İkonu</label>
								@Html.DropDownListFor(x => x.Icon, (List<SelectListItem>)ViewBag.NotificationIcon, new { @class = "form-control" })
							</div>

							<div class="form-group">
								<label for="description">Bildirim Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>

							<div class="form-group">
								<label for="date">Oluşturulma Tarihi</label>
								<input type="datetime-local" class="form-control" asp-for="Date" id="date" readonly>
							</div>
						</div>

						<div class="card-action">
							<a href="/Notification/Index/" class="btn btn-danger">Geri Dön</a>
							<button class="btn btn-primary">Bildirimi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




