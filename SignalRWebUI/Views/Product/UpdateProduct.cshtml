@model UpdateProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="ProductID" />
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün Adı</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productName">
							</div>

							<div class="form-group">
								<label for="description">Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>

							<div class="form-group">
								<label for="price">Ürün Fiyatı</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>

							<div class="form-group">
								<label for="imageUrl">Ürün Görseli</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
							</div>

							<div class="form-group">
								<label for="categoryID">Ürün Kategorisi</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
							</div>

							<div class="form-group">
								<label for="productStatus">Ürün Durumu: </label>

								<label class="form-check-label">
									<input asp-for="ProductStatus" class="form-check-input" type="checkbox" value="true" />
									<span class="form-check-sign">Mevcut</span>
								</label>
							</div>
						</div>

						<div class="card-action">
							<a href="/Product/Index/" class="btn btn-danger">Geri Dön</a>
							<button class="btn btn-primary">Ürünü Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

