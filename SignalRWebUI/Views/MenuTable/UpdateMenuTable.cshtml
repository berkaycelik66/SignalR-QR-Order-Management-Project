@model UpdateMenuTableDto

@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<input type="hidden" asp-for="MenuTableID" />
					<div class="card">
						<div class="card-header">
							<div class="card-title">Masa Güncelleme İşlemi</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="name">Masa Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>

							<div class="form-group">
								<label for="status">Masa Durumu: </label>

								<label class="form-check-label">
									<input asp-for="Status" class="form-check-input" type="checkbox" value="true" />
									<span class="form-check-sign">Dolu</span>
								</label>
							</div>
						</div>

						<div class="card-action">
							<a href="/MenuTable/Index/" class="btn btn-danger">Geri Dön</a>
							<button class="btn btn-primary">Masayı Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>