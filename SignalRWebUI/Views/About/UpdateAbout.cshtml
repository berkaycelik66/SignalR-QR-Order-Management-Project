@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="AboutID" />
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>

							<div class="form-group">
								<label for="imageUrl">Görsel URL</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
							</div>

							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
							</div>
						</div>

						<div class="card-action">
							<a href="/About/Index/" class="btn btn-danger">Geri Dön</a>
							<button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




