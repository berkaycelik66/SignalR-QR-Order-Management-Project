@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Referans Yorum Girişi</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="name">Müşteri Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>

							<div class="form-group">
								<label for="title">Müşteri Ünvanı</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>

							<div class="form-group">
								<label for="imageUrl">Müşteri Resim Dosya Yolu</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
							</div>

							<div class="form-group">
								<label for="comment">Müşteri Yorumu</label>
								<input type="text" class="form-control" asp-for="Comment" id="comment">
							</div>
						</div>

						<div class="card-action">
							<a href="/Testimonial/Index/" class="btn btn-danger">Geri Dön</a>
							<button class="btn btn-primary">Referans Yorumu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


