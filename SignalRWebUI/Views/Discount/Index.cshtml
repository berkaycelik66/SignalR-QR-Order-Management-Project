@model List<ResultDiscountDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün indirimli ürünleri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Durum Değiştir</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>
                                            @if (item.Status)
                                            {
                                                <span style="color:green;">Aktif</span>
                                            }
                                            else
                                            {
                                                <span style="color:red;">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status)
                                            {
                                                <a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-dark">Pasif Yap</a>
                                            }
                                            else
                                            {
                                                <a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-warning">Aktif Yap</a>
                                            }
                                        </td>

                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

