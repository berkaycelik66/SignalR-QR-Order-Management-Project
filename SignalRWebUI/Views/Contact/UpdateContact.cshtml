@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgisi Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="ContactID" />
						<div class="card-body">
							<div class="form-group">
								<label for="location">Lokasyon</label>
								<input type="text" class="form-control" asp-for="Location" id="location">
							</div>
							<div class="form-group">
								<label for="phone">Telefon Numarası</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
							<div class="form-group">
								<label for="mail">Mail</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
							<div class="form-group">
								<label for="footerDescription">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="footerDescription"></textarea>
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
